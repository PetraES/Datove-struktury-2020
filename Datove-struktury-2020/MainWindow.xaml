<Window x:Class="Datove_struktury_2020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Datove_struktury_2020"
        mc:Ignorable="d"
        Title="MainWindow" Height="825" Width="1000" ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" Closing="Window_Closing_1"
        
        >

    <Grid Height="794" HorizontalAlignment="Left" VerticalAlignment="Top"
          Width="969">
        <Grid.RowDefinitions>
            <RowDefinition Height="99*"/>
            <RowDefinition Height="76*"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="canvasMainElem" Margin="14,15,37,370">
            <Button x:Name="PridatCestuButt" Content="Přidat silnici" 
                    Height="30" Canvas.Left="90" Canvas.Top="5" Width="70" 
                    Click="PridatCestuButt_Click"/>
            <Button x:Name="NajdiCestuButton" Content="Najdi cestu" Height="30"
                    Canvas.Left="170" Canvas.Top="5" Width="70" 
                    Click="NajdiCestuButt_Click"/>
            <Button x:Name="VlozBodButton" Content="Vlož bod" Height="30"
                    Canvas.Left="250" Canvas.Top="5" Width="70"
                    Click="VlozBodButton_Click"/>
            <Button x:Name="PridejCestuButton" Canvas.Left="10" Canvas.Top="5"
                    Content="Pridej cestu" Height="30" Width="70" Click="PridejCestuButton_Click"/>
            <Button x:Name="tlacitko_ANO" Content="ANO" Canvas.Left="410" Canvas.Top="5" Click="ANO_Button_Click" RenderTransformOrigin="0.454,-0.349" Height="30" Width="30" BorderThickness="1,1,1,1" Visibility="Visible"/>
            <Button x:Name="tlacitko_NE" Content="NE" Canvas.Left="450" Canvas.Top="5" Click="NE_Button_Click" RenderTransformOrigin="0.454,-0.349" Height="30" Width="30"/>

            <Label 
                x:Name="label1" 
                Height="157" 
                Canvas.Left="10" 
                Canvas.Top="61" 
                Width="910" 
                FontSize="12pt" 
            >

                <TextBlock TextWrapping="WrapWithOverflow" Height="147">
    This is a Label with text wrapping featureThis is a Label with text wrapping featureThis is a Label with text wrapping featureThis is a Label with text wrapping feature. If text does not fit in a single line,
    It will move to next line.
                </TextBlock>


            </Label>

            <Canvas x:Name="canvasElem" Height="529" Canvas.Top="223" Width="910" Background="LightSeaGreen" Canvas.Left="10" MouseLeftButtonDown="canvasElem_MouseLeftButtonDown"/>
        </Canvas>
    </Grid>
</Window>
