<Window x:Class="Datove_struktury_2020.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Datove_struktury_2020"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="1043*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="canvasMainElem" HorizontalAlignment="Left" Height="904" Margin="10,10,0,0" VerticalAlignment="Top" Width="1268" Grid.ColumnSpan="3">
            <Canvas x:Name="canvasButt" Height="40" Canvas.Left="1" Width="1191">
                <Button x:Name="PridatBodButt" Content="Přidat obec" Canvas.Left="10" Canvas.Top="10" Width="75" RenderTransformOrigin="-0.16,0.6" Click="PridatBodButt_Click"/>
                <Button x:Name="PridatCestuButt" Content="Přidat silnici" Canvas.Left="90" Canvas.Top="10" Width="75" Click="PridatCestuButt_Click"/>
                <Button x:Name="NajdiCestuButt" Content="Najdi cestu k nehodě" Canvas.Left="170" Canvas.Top="10" Width="121" Click="NajdiCestuButt_Click"/>
            </Canvas>
            <Canvas x:Name="canvasElem" Height="983" Canvas.Top="40" Width="1600" Background="DarkGreen">
            </Canvas>
        </Canvas>
    </Grid>
</Window>
